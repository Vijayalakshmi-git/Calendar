    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <%# Displaying drop down box to get the end time of the appointment %>
  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time %>
  </div>
  
  <%# Displaying drop down box to get the end time of the appointment %>
  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>

